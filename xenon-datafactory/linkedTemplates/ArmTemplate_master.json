{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "xenon-datafactory"
		},
		"adls2_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'adls2'"
		},
		"xenondb_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'xenondb'"
		},
		"xenonstorage_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'xenonstorage'"
		},
		"adls2_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://xenonadls.dfs.core.windows.net"
		},
		"xenonstorage_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://xenonadls.dfs.core.windows.net"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "xenon-datafactory_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"adls2_accountKey": {
						"value": "[parameters('adls2_accountKey')]"
					},
					"xenondb_connectionString": {
						"value": "[parameters('xenondb_connectionString')]"
					},
					"xenonstorage_accountKey": {
						"value": "[parameters('xenonstorage_accountKey')]"
					},
					"adls2_properties_typeProperties_url": {
						"value": "[parameters('adls2_properties_typeProperties_url')]"
					},
					"xenonstorage_properties_typeProperties_url": {
						"value": "[parameters('xenonstorage_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}